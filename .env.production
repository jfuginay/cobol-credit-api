# Production Environment Variables
NODE_ENV=production
PORT=3000

# CORS Settings - Update with your domain
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50

# Security Headers
HELMET_CSP=true
FORCE_HTTPS=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_AUTH_USER=admin
SWAGGER_AUTH_PASS=changethispassword

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30000